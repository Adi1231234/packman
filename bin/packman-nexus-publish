#!/usr/bin/env node

const { initializeCommand, options } = require('../lib/core/initializer');

const commands = require('../lib/nexus/publish/commands');

const commandsObject = [
    {
        name: 'tarballs <packagesPath>',
        description: 'use the nexus api to publish tarballs at the specified path to the registry',
        options: [
            options.registryOption,
        ],
        action: ((packagesPath, command) => commands.publishTarballsCommand({ packagesPath, ...command })),
    },
];

initializeCommand('publish', commandsObject);
