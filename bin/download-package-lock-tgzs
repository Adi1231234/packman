#!/usr/bin/env node

const [, , packageLockUri] = process.argv;

const downloader = require("../lib/downloader");
const {retrievePackageLock} = require('../lib/package-lock-retriever');

if (!packageLockUri) {
  throw new Error('must provide a path to a package-lock.json file');
}

retrievePackageLock(packageLockUri)
  .then(packageLock => {
    downloader.downloadFromPackageLock(packageLock);
});
