    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "download package",
            "program": "${workspaceFolder}/bin/packman",
            "args": [
                "npm",
                "download",
                "package",
                "node-tgz-downloader",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download search",
            "program": "${workspaceFolder}/bin/packman",
            "args": [
                "npm",
                "download",
                "search",
                "tgz",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download local package-lock",
            "program": "${workspaceFolder}/bin/packman",
            "args": [
                "npm",
                "download",
                "package-lock",
                "./package-lock.json",
                "--directory",
                "custom-tarballs"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download remote package-lock",
            "program": "${workspaceFolder}/bin/packman",
            "args": [
                "npm",
                "download",
                "package-lock",
                "https://raw.githubusercontent.com/Meir017/node-tgz-downloader/master/package-lock.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download local package-json",
            "program": "${workspaceFolder}/bin/packman",
            "args": [
                "npm",
                "download",
                "package-json",
                "./package.json",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "download remote package-json",
            "program": "${workspaceFolder}/bin/packman",
            "args": [
                "npm",
                "download",
                "package-json",
                "https://raw.githubusercontent.com/Meir017/node-tgz-downloader/master/package.json",
                "--devDependencies"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jasmine Tests",
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine.js",
            "args": [
                "test/**/*spec.js",
                "--reporter=jasmine-console-reporter"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "migrate package to fake registry",
            "program": "${workspaceFolder}/bin/packman-npm-migrate",
            "args": [
                "package",
                "lodash",
                "--source",
                "https://registry.npmjs.org/",
                "--target",
                "https://fake.registry/"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "migrate package to current registry",
            "program": "${workspaceFolder}/bin/packman-npm-migrate",
            "args": [
                "package",
                "lodash",
                "--source",
                "https://registry.npmjs.org/",
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "migrate search to current registry",
            "program": "${workspaceFolder}/bin/packman-npm-migrate",
            "args": [
                "search",
                "jquery",
                "--source",
                "https://registry.npmjs.org/",
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        },
    ]
}